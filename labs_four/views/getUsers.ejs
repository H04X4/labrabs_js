<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Список пользователей</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="p-4">
    <h1>Список пользователей</h1>
    <!-- Кнопка перехода на форму добавления пользователя -->
    <a href="/postUser" class="btn btn-primary mb-3">Добавить пользователя</a>

    <% if (users.length === 0) { %>
        <p>Пользователи отсутствуют.</p>
    <% } else { %>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Рейтинг</th>
                <th>Пол</th>
                <th>Направления</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.rating %></td>
                <td><%= user.gender == 0 ? 'Женский' : 'Мужской' %></td>
                <td>
                    <% if (user.arrayDirects.length === 0) { %>
                        -
                    <% } else { %>
                        <% user.arrayDirects.forEach(d => { %>
                            <%= arrayDirects[d] %><br>
                        <% }) %>
                    <% } %>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } %>
</body>
</html>